{
  "compilerOptions": {
   "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017"],
    "outDir": "dist",
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
